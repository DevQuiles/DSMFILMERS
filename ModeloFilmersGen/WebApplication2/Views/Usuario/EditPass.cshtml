@model WebApplication2.Models.PassUsuarioViewModel

@{
    ViewData["Title"] = "EditPass";
}

<h1>Editar Contraseña</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPass">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordAntigua" class="control-label">Contraseña actual</label>
                <input asp-for="PasswordAntigua" class="form-control" />
                <span asp-validation-for="PasswordAntigua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Nueva contraseña</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

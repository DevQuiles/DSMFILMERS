@model WebApplication2.Models.PeliculasYVistasViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!-- Muestra las películas -->
<h2>Películas</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Carátula</th>
            <!-- Agrega más columnas según sea necesario -->
        </tr>
    </thead>
    <tbody>
        @foreach (var pelicula in Model.Peliculas)
        {
            <tr>
                <td>@pelicula.nombre</td>
                <td>@pelicula.caratula</td>
                <!-- Muestra más datos de la película -->
            </tr>
        }
    </tbody>
</table>

<!-- Muestra las últimas vistas -->
<h2>Últimas Películas Vistas</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID Película</th>
            <th>Comentario</th>
            <!-- Agrega más columnas según sea necesario -->
        </tr>
    </thead>
    <tbody>
        @foreach (var vista in Model.UltimasVistas)
        {
            <tr>
                <td>@vista.idPelicula</td>
                <td>@vista.comentario</td>
                <!-- Muestra más datos de la vista -->
            </tr>
        }
    </tbody>
</table>
</script>

@*----------------------------------------------Vista de la pelicula--------------------------------------------------------------------------*@


<script>

<div id="carruselPeliculas" class="carousel slide carousel-fade" data-ride="carousel" data-interval ="false">
    <div class="carousel-inner">
        @{ 
            bool esPrimerItem = true;
            int contador = 0;


        }

        <div class="carousel-item active">
            <div class="row">
                @foreach (var pelicula in Model.Peliculas)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="card border-0">
                            <div class="hover-overlay">
                                <a href="@Url.Action("Details", "Pelicula", new { id = pelicula.Id })">
                                <img src="@pelicula.caratula" class="card-img-top img-fluid" alt="Carátula">
                                <div class="mask"></div>
                            </a>

<div id="carruselPeliculas" class="carousel slide carousel-fade" data-ride="carousel" data-interval ="false">
    <div class="carousel-inner">
        @{ 
            bool esPrimerItem = true;
            int contador = 0;


        }

        <div class="carousel-item active">
            <div class="row">
                @foreach (var pelicula in Model.Peliculas)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="card border-0">
                            <div class="hover-overlay">
                                <a href="@Url.Action("Details", "Pelicula", new { id = pelicula.Id })">
                                <img src="@pelicula.caratula" class="card-img-top img-fluid" alt="Carátula">
                                <div class="mask"></div>
                            </a>

                            </div>
                            
                            
                            <div class="card-body">
                                <h5 class="card-title text-center">@pelicula.nombre</h5>
                            </div>
                        </div>
                    </div>

                    contador++;
                    if (contador % 8 == 0 && !Model.Peliculas.Last().Equals(pelicula))
                    {
                        esPrimerItem = false;
                        @:</div></div><div class="carousel-item"><div class="row">
                    }
                }


            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carruselPeliculas" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carruselPeliculas" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div> 

<!-- Muestra las últimas vistas -->
<h2>Últimas Películas Vistas</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID Película</th>
            <th>Comentario</th>
            <!-- Agrega más columnas según sea necesario -->
        </tr>
    </thead>
    <tbody>
        @foreach (var vista in Model.UltimasVistas)
        {
            <tr>
                <td>@vista.idPelicula</td>
                <td>@vista.comentario</td>
                <!-- Muestra más datos de la vista -->
            </tr>
        }
    </tbody>
</table>





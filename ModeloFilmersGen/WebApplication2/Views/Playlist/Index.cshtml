@model IEnumerable<WebApplication2.Models.PlaylistViewModel>

@{
    ViewData["Title"] = "Index";
}


<style>
    .playlist-container {
        background-color: #333;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 10px;
    }

    body {
        background-color: black;
        color: white; 
    }

    /* Estilos para los botones */
    .btn-edit {
        background-color: green;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        margin-right: 5px;
    }

    .btn-details {
        background-color: orange;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        margin-right: 5px;
    }

    .btn-delete {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
    }
</style>

@section scripts {
    <script>
        $(document).ready(function () {
            // Agregar a favoritos
            $('.btn-add-favorite').click(function () {
                var playlistId = $(this).data('playlist-id');


                // Alerta
                alert('Playlist agregada a favoritos con ID: ' + playlistId);
            });
        });
    </script>
}


<h1>Bienvenido a las playlists</h1>

<p>
    <a asp-action="Create">Crear nueva playlist</a>
</p>

<div class="container-fluid">
    @foreach (var item in Model)
    {
        <div class="playlist-container">
            <div class="row">
                <!-- Imagen -->
                <div class="col-xl-3">
                    <p>Imagen</p>
                </div>

                <!-- Nombre -->
                <div class="col-xl-6">
                    <p>@Html.DisplayFor(modelItem => item.nombre)</p>
                    <p>Usuario</p>
                    <p>@Html.DisplayFor(modelItem => item.Descripcion)</p>
                </div>

                <div class="col-xl-3">
                    <button class="btn btn-primary btn-add-favorite" data-playlist-id="@item.Id">Agregar a Favoritos</button>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-success" title="Edit">Editar</a>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-warning" title="Details">Detalles</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger" title="Delete">Borrar</a>
                </div>


            </div>
        </div>
    }
</div>



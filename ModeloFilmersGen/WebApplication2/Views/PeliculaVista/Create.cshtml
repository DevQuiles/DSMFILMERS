@model WebApplication2.Models.PeliculaVistaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PeliculaVistaViewModel</h4>
<hr/>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="comentario" class="control-label"></label>
                <input asp-for="comentario" class="form-control" />
                <span asp-validation-for="comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label"></label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="valoracion" class="control-label"></label>
                <select asp-for="valoracion" class="form-control">
                    @foreach (var value in Enum.GetValues(typeof(ModeloFilmersGen.ApplicationCore.Enumerated.Pruebadeesquemaproyecto.EstrellasEnum)))
                    {
                        <option value="@value">@value</option>
                    }
                </select>
                <span asp-validation-for="valoracion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@model IEnumerable<WebApplication2.Models.PeliculaViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Buscar</h1>
        </div>
    </div>

    <div class="row mt-3 mb-3">
        <!-- Search form -->
        <form action="@Url.Action("Index", "Pelicula")" method="GET" class="form-inline w-50 mb-3" id="searchForm">
            <div class="input-group rounded">
                <input type="search" name="searchString" class="form-control rounded" placeholder="Buscar por nombre" aria-label="Search" aria-describedby="search-addon" id="searchInput" />
                <span class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </form>

        <hr />

        <div class="col-md-12 d-flex justify-content-center">
            <!-- Botón para ir a la sección de películas -->
            <a href="@Url.Action("Index", "Pelicula")" class="btn mx-2 disabled border-primary">Películas</a>
            <a href="@Url.Action("Index", "Usuario")" class="btn mx-2">Usuarios</a>
        </div>


    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 col-12">
                <div class="card border-0">
                    <a href="@Url.Action("Details", "Pelicula", new { id = item.Id })">
                        <img src="@item.caratula" class="card-img-top img-fluid" alt="Carátula">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-center">@item.nombre</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.caratula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.caratula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>

